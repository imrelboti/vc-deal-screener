# VC Deal Screener - Configuration Environnement
# Phase 2: Automated Data Collection

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vc_deal_screener
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Redis (Cache & Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# API KEYS - Data Collection
# =============================================================================

# Crunchbase API (Source principale - RECOMMANDÉ)
# Prix: ~$300/mois pour Pro API
# Signup: https://data.crunchbase.com/docs
CRUNCHBASE_API_KEY=your_crunchbase_api_key_here

# Serper API (Google Search)
# Prix: $50/mois pour 5000 requêtes
# Signup: https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# Bright Data (LinkedIn Scraping - OPTIONNEL)
# Prix: ~$50/mois
# Signup: https://brightdata.com
BRIGHT_DATA_USERNAME=
BRIGHT_DATA_PASSWORD=
BRIGHT_DATA_ZONE=

# AngelList API (OPTIONNEL)
ANGELLIST_API_KEY=

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================

# Timezone
TZ=Africa/Casablanca

# Collecte complète (cron format)
FULL_COLLECTION_SCHEDULE="0 3 * * 0"  # Dimanche 3h

# Collecte incrémentale
INCREMENTAL_SCHEDULE="0 2 * * *"  # Tous les jours 2h

# Actualisation rapide
QUICK_UPDATE_SCHEDULE="0 */6 * * *"  # Toutes les 6h

# =============================================================================
# ML & AI CONFIGURATION
# =============================================================================

# Hugging Face (pour modèles NLP)
HUGGINGFACE_TOKEN=

# OpenAI (si utilisation GPT pour classification - OPTIONNEL)
OPENAI_API_KEY=

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Sentry (Error Tracking - OPTIONNEL)
SENTRY_DSN=

# =============================================================================
# SECURITY
# =============================================================================

# Secret key pour JWT si API REST
SECRET_KEY=your_secret_key_here_change_in_production

# Allowed hosts (production)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# PERFORMANCE
# =============================================================================

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Retry attempts
MAX_RETRIES=3

# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Activer/désactiver collecteurs
ENABLE_CRUNCHBASE=true
ENABLE_WEB_SCRAPER=true
ENABLE_GOOGLE_SEARCH=true
ENABLE_LINKEDIN=false
ENABLE_LOCAL_SOURCES=true

# Activer ML
ENABLE_ML_CLASSIFICATION=true
ENABLE_ML_SCORING=true
ENABLE_SENTIMENT_ANALYSIS=true

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# =============================================================================
# NOTES
# =============================================================================
# 
# COÛTS MENSUELS ESTIMÉS:
# - Crunchbase Pro API: $300/mois (ESSENTIEL)
# - Serper (Google Search): $50/mois (RECOMMANDÉ)
# - Bright Data (LinkedIn): $50/mois (Optionnel)
# - Hosting (Railway/Heroku): $20-50/mois
# - Total minimum: ~$350-400/mois
#
# ALTERNATIVES GRATUITES/LOW-COST:
# - Remplacer Crunchbase par web scraping manuel (moins fiable)
# - Utiliser Google Custom Search (100 requêtes/jour gratuites)
# - Self-host sur VPS (Digital Ocean: $12/mois)
#
